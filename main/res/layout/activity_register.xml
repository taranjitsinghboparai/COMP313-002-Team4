<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="-16dp"
        app:srcCompat="@drawable/headerregister" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="106dp"
        android:text="Username:"
        android:textColor="#565555"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="3dp"
        android:layout_y="161dp"
        android:text="Password:"
        android:textColor="#565555"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="219dp"
        android:text="Phone:"
        android:textColor="#565555"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="280dp"
        android:text="Address:"
        android:textColor="#565555"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="204dp"
        android:layout_height="55dp"
        android:layout_x="84dp"
        android:layout_y="416dp"
        android:onClick="RegClear"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btnclear" />

    <ImageButton
        android:id="@+id/btnRegister"
        android:layout_width="204dp"
        android:layout_height="55dp"
        android:layout_x="82dp"
        android:layout_y="345dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btnregister" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="127dp"
        android:layout_y="101dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="150dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="207dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="266dp"
        android:ems="10"
        android:inputType="textPersonName" />


</AbsoluteLayout>